    <form action="/admin/couponedit" method="post" >
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Add New Coupon</h2>
                    <div>
                        <button class="btn btn-md rounded font-sm hover-up">Save</button>
                        <input type="hidden" value="<%= couponData._id %>" name="couponId">
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        
                        <div class="row gx-3">
                            <div class="col-md-4  mb-3">
                                <label for="product_size" class="form-label">CouponCode</label>
                                <input type="text" placeholder="Type here" value="<%= couponData.code %>" name="couponcode" class="form-control" id="mincartAmt">
                            </div>
                            <div class="col-md-4  mb-3">
                                <label for="product_sku" class="form-label">Dicount</label>
                                <input type="text" placeholder="Type here" value="<%= couponData.discount %>" name="discount" class="form-control" id="discount">
                            </div>
                            <div class="col-md-4  mb-3">
                                <label for="product_color" class="form-label">limit</label>
                                <input type="text" placeholder="Type here" value="<%= couponData.limit %>" name="limit" class="form-control" id="limit">
                            </div>
                            
                        </div>
                        <div class=" col-md-10 mb-3 " >
                            <label for="product_title" class="form-label">Minimum Cart Amountt</label>
                            <input type="text" placeholder="Type here" value="<%= couponData.minCartAmt %>" name="minCartAmt" class="form-control" id="mincartAmt">
                        </div>
                        <div class="col-md-10 mb-3">
                            <label for="product_brand" class="form-label">Maximum Reedemable Amount</label>
                            <input type="text" placeholder="Type here" value="<%= couponData.maxReedemadbleAmt %>" name="maxReedemableAmt" class="form-control" id="maxReedemableAmt">
                        </div>
                    </div>
                </div> <!-- card end// -->
                <!-- card end// -->
                <!-- card end// -->
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">Expiry</label>
                            <input type="date" placeholder="Type here" value="<%= expiry %>" name="expiryDate" class="form-control" id="expiry" >
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Discount Type</label>
                            <select class="form-select" name="discountType" id="discounttype" >
                                <option value="fixed" <%if(couponData.type=='fixed'){%>selected<%}%>>Fixed</option>
                                <option value="percentage"  <%if(couponData.type=='percentage'){%>selected<%}%>>Percentage</option>
