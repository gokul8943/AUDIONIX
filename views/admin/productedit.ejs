                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="product_brand" class="form-label">Brand</label>
                            <input type="text" name="brand" value="<%= productData.brand %>" placeholder="Type here" class="form-control" id="product_brand">
                        </div>
                    </div>
                </div> <!-- card end// -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">Description</label>
                            <textarea placeholder="Type here" name="description" class="form-control" rows="4"><%= productData.description %></textarea>
                        </div>
                    </div>
                </div> <!-- card end// -->
