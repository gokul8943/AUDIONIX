                            <label class="form-check-label" for="product-cat-3">Yes</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="microPhone" type="radio" value="false" id="product-cat-3" <%if(productData.microPhone === false ){%>checked<%}%>>
                            <label class="form-check-label" for="product-cat-3">NO</label>
                        </div>
                    </div>
                </div> 
        </div>
    </section>
</form>
