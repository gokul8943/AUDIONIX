<script>
    function validateProductForm() {
        
        clearErrorMessages();

        
        var name = document.getElementById('product-title').value;
        var price = document.getElementById('product-price').value;
        var color = document.getElementById('product-color').value;
        var discountPrice = document.getElementById('product-discountPrice').value;
        var brand = document.getElementById('product-brand').value;
        var description = document.getElementById('product-descripition').value;
        var batteryCapacity = document.getElementById('product-batteryCapacity').value;
        var type = document.getElementById('product-type').value;
        var quantity = document.getElementById('product-quantity').value;
        var driverUnits = document.getElementById('product-driverUnits').value;

        
        if (!name ){
            displayErrorMessage('product-title', 'Model Name is required.');
            return false;
        }
        if(!price){
            displayErrorMessage('product-price', 'Price is required.');
            return false;
        }
        if (isNaN(parseFloat(price)) || parseFloat(price) < 0) {
          displayErrorMessage('product-price', 'Please enter a valid price no negative number.');
          return false;
         } 

        if(!color){
            displayErrorMessage('product-color', 'Colour is required.');
            return false;
        }
        if(!discountPrice){
            displayErrorMessage('product-discountPrice', 'Discount Price is required.');
            return false;
        }
    if( !brand ){
        displayErrorMessage('product-brand', 'Brand is required.');
        return false;
    }
    if(!description){
        displayErrorMessage('product-descripition', 'Description is required.');
        return false;
    }
      if(!batteryCapacity){
        displayErrorMessage('product-batteryCapacity','batteryCapacity is required');
        return false;
      }
      if(!type){
        displayErrorMessage('product-type','type is required');
        return false;
      }
      if(!quantity){
        displayErrorMessage('product-quantity','quantity is is required');
        return false;
      }
      if (!/^\d+$/.test(quantity) || parseInt(quantity) < 0) {
        displayErrorMessage('product-quantity', 'Please enter a valid quantity.');
        return false;
      }


        if(!driverUnits){
            displayErrorMessage('product-driverUnits','driverUnits is required');
            return false;
        }
        var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.svg)$/i;
        if (!allowedExtensions.exec(image.value)) {
            displayErrorMessage('image', 'Invalid file type. Please upload only images (jpg, jpeg, png, gif).');
            image.value = ''; 
            return false;
        }
        return true;
    }

    function clearErrorMessages() {
        
        var errorElements = document.getElementsByClassName('error-message');
        for (var i = 0; i < errorElements.length; i++) {
            errorElements[i].innerText = '';
        }
    }

    function displayErrorMessage(fieldId, message) {
        
        var errorElement = document.getElementById(fieldId + '-error');
        if (errorElement) {
            errorElement.innerText = message;
        }
    }

        let imageCount = 0;
    
const selectedImages = [];

function addImage() {
    if (imageCount < 4) {
        imageCount++;
        const container = document.querySelector('.images-container');
        const imageDiv = document.createElement('div');
        imageDiv.classList.add('mb-4');
        imageDiv.innerHTML = `
            <label class="form-label">Image ${imageCount}</label>
            <div class="image-container">
                <img src="" alt="" id="image-preview${imageCount}">
            </div>
            <input class="form-control" name="image${imageCount}" type="file" onchange="displayImage(${imageCount}, this)" accept="image/*">
            <input type="checkbox" class="image-checkbox" onchange="toggleImageSelection(${imageCount}, this)">
        `;
        container.appendChild(imageDiv);
    }
}


function displayImage(imageNumber, input) {
    const preview = document.getElementById(`image-preview${imageNumber}`);

    if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
            preview.src = e.target.result;
        };
        reader.readAsDataURL(input.files[0]);
    } else {
        preview.src = '';
    }
}

function toggleImageSelection(imageNumber, checkbox) {
    // Add or remove the image number from the selectedImages array
    if (checkbox.checked) {
        selectedImages.push(imageNumber);
    } else {
        const index = selectedImages.indexOf(imageNumber);
        if (index !== -1) {
            selectedImages.splice(index, 1);
        }
    }
}

function deleteImage(imageNumber) {
    const imageDiv = document.getElementById(`image-preview${imageNumber}`).closest('.mb-4');
    if (imageDiv) {
        imageDiv.remove();
    }
}

function deleteImages() {
    // Remove the selected images from the DOM
    selectedImages.forEach((imageNumber) => {
        deleteImage(imageNumber);
    });

    // Clear the selectedImages array
    selectedImages.length = 0;
}

    </script>


