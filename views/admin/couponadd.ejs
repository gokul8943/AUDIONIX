<script>
    function validateProductForm() {
      clearErrorMessages();
  
      var couponCode = document.getElementById('couponCode').value;
      var discount = document.getElementById('discount').value;
      var limit = document.getElementById('limit').value;
      var minCartAmt = document.getElementById('mincartAmt').value;
      var maxReedemableAmt = document.getElementById('maxReedemableAmt').value;
      var expiryDate = document.getElementById('expiry').value;
  
      // Validate coupon code
      if (couponCode.trim() === '') {
        displayErrorMessage('couponCode', 'Coupon code is required');
        return false;
      }
  
      // Validate discount
      if (discount.trim() === '' || isNaN(parseFloat(discount)) || parseFloat(discount) < 0) {
        displayErrorMessage('discount', 'Invalid discount');
        return false;
      }
  
      // Validate limit
      if (limit.trim() === '' || isNaN(parseFloat(limit)) || parseFloat(limit)<0) {
        displayErrorMessage('limit', 'invalid  Limit ');
        return false;
      }
  
      // Validate minCartAmt
      if (minCartAmt.trim() === '' || isNaN(parseFloat(minCartAmt)) || parseFloat(minCartAmt) < 0) {
        displayErrorMessage('mincartAmt', 'invalid Amount');
        return false;
      }
  
      // Validate maxReedemableAmt
      if (maxReedemableAmt.trim() === '' || isNaN(parseFloat(maxReedemableAmt)) || parseFloat(maxReedemableAmt) < 0) {
        displayErrorMessage('maxReedemableAmt', 'invalid Amount');
        return false;
      }
  
      // Validate expiryDate
      if (expiryDate.trim() === '') {
        displayErrorMessage('expiry', 'Expiry date is required');
        return false;
      } else {
        var currentDate = new Date();
        var selectedDate = new Date(expiryDate);
  
        if (selectedDate < currentDate) {
          displayErrorMessage('expiry', 'Expiry date must be greater than or equal to the current date');
          return false;
        }
      }
  
      return true;
    }
  
    function clearErrorMessages() {
      var errorElements = document.getElementsByClassName('error-message');
      for (var i = 0; i < errorElements.length; i++) {
        errorElements[i].innerText = '';
      }
    }
  
    function displayErrorMessage(fieldId, message) {
      var errorElement = document.getElementById(fieldId + '-error');
      if (errorElement) {
        errorElement.innerText = message;
      }
    }
</script>

  
  

