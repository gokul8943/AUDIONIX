        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p></p>
                </div>
                <div>
                   
                    <a href="/admin/productAdd" class="btn btn-primary btn-sm rounded">Add Product</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            
                        </div>
                       
                        
                       
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <% Products.forEach(function(product) { %>
                    <article class="itemlist">
                        
                        <div class="row align-items-center">
                            <div class="col col-check flex-grow-0">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 flex-grow-1 col-name">
                                <a class="itemside" href="#">
                                    <div class="left">
                                        <img src="/adminassets/productimages/<%= product.image[0] %>" class="img-sm img-thumbnail" alt="Item">
                                    </div>
                                    <div class="info">
                                        <h6 class="mb-0"><%= product.name %></h6>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-1 col-sm-2 col-2 col-price"> <span><%= product.price  %></span> </div>
                            <div class="col-lg-1 col-sm-2 col-2 col-price"> <span><%= product.quantity  %></span> </div>
                            <div class="col-lg-1 col-sm-2 col-2 col-status">
                                <span class="badge rounded-pill alert-success"><%= product.is_listed %></span>
                            </div>
                            <div class="col-lg-1 col-sm-2 col-2 col-date">
                                <span><%= new Date(product.date).toLocaleDateString() %></span>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-2 col-action text-end">
                                <a href="/admin/productedit?id=<%= product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> Edit
                                </a>
                                <% if(product.is_listed == true){ %>
                                    <a class="btn btn-sm font-sm btn-light rounded" style="color:red" href="/admin/productblock?id=<%= product._id %>">block</a>
                                <% } else { %>
                                    <a class="btn btn-sm font-sm btn-light rounded" style="color:green"  href="/admin/productblock?id=<%= product._id %>">unblock</a>
                                <% } %>
                                
                            </div>
                        </div> <!-- row .// -->
                    </article> <!-- itemlist  .// -->
                    <% }); %><!-- itemlist  .// -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                              <a class="page-link" href="?page=<%= currentPage - 1 %>"><</a>
                            </li>
                          <% } %>
                      
                          <% for (let i = 1; i <= totalPage; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                          <% } %>
                      
                          <% if (currentPage < totalPage) { %>
                            <li class="page-item">
                              <a class="page-link" href="?page=<%= currentPage + 1 %>">></a>
                            </li>
                          <% } %>
                    </ul>
                </nav>
            </div>
