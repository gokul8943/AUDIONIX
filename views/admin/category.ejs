    <script>
        function validateForm() {
            var name = document.getElementById('product-name').value;
            var description = document.getElementById('product-description').value;
            var image = document.getElementById('image');
    
            
            if (name.trim() === '') {
                displayErrorMessage('product-name', 'Name is required.');
                return false;
            }
            if(description.trim() === ''){
                displayErrorMessage('product-description', 'Description is required.');
                return false;
            }
            if(!image.files.length){
                displayErrorMessage('image', 'Image is required.');
                return false;
            }
            var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.svg)$/i;
        if (!allowedExtensions.exec(image.value)) {
            displayErrorMessage('image', 'Invalid file type. Please upload only images (jpg, jpeg, png, gif).');
            image.value = ''; 
            return false;
        }
    
            return true;
        }
    
        function displayErrorMessage(fieldId, message) {
            var errorElement = document.getElementById(fieldId + '-error');
            errorElement.textContent = message;
        }
    </script>
    
    
    

