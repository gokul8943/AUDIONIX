        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or block a category</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action=""  method="post" enctype="multipart/form-data"  onsubmit="return validateForm()">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" name="name" class="form-control" id="product-name" />
                                    <div class="error-message" style="color:red;" id="product-name-error"></div>
                                </div>
                               
                          
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" name="description" class="form-control" id="product-description"></textarea>
                                    <div class="error-message" style="color:red;" id="product-descripton-error"></div>
                                </div>
                                <div class="mb-4">
                                    <label for="image" class="form-label">Image</label>
                                    <input type="file" class="form-control" id="image" name="image" accept="image/*" />
                                    <div class="error-message" style="color:red;" id="image-error"></div>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary">Create category</button>
                                </div>
                            </form>
                            <% if (req.query.existCategory) { %>
                                <p style="color: red;" id="message text-center">Category Already Exist</p>
                            <% } %>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                
                                            </th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>image</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Categories.forEach(function(category) { %>
                                        <tr>
                                            <td class="text-center">
                                            </td>
                                            <td><b><%= category.name %></b></td>
                                            <td><%= category.description %></td>
                                            <td>  <img src="/adminassets/categoryimages/<%= category.image %>" alt="<%= category.name %> Image style=" height="60px" width="60px""></td>
                                            <td class="text-end">
                                                <div class="dropdown">
                                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="/admin/categoryedit?id=<%= category._id %>">Edit</a>

                                                        <% if(category.is_listed == true){ %>
                                                            <a class="dropdown-item" style="color:red" href="/admin/categoryblock?id=<%= category._id %>">block</a>
                                                        <% } else { %>
                                                            <a class="dropdown-item" style="color:green"  href="/admin/categoryblock?id=<%= category._id %>">unblock</a>
                                                        <% } %>
                                                        
                                                    </div>
                                                </div> <!-- dropdown //end -->
                                            </td>
                                        </tr>
                                        <% }); %>
